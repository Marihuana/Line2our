<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable
        name="viewModel"
        type="com.four.hackerton.line2our.feature.station.StationInfoViewModel" />

    <variable
        name="station"
        type="com.four.hackerton.line2our.model.network.model.StationVO" />
</data>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".feature.main.sub.StationInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomSheet"
            >

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#93f06f"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tvPrev"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/viewLine"
                android:text="@{station.prev}"
                android:textStyle="bold"
                android:textColor="#80FFFFFF"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/tvNext"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/viewLine"
                android:text="@{station.next}"
                android:textStyle="bold"
                android:textColor="#80FFFFFF"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="5dp"
                />

            <ImageView
                android:id="@+id/ivReward"
                android:layout_width="38dp"
                android:layout_height="29dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_crown"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvStationName"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvStationName"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:background="@drawable/img_rounded_board_station"
                android:minWidth="135dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@{station.name}"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:lines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/img_rounded_bottom_sheet"
            android:orientation="vertical"
            android:paddingTop="32dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="최신 토픽"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"

                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/catRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="7.5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/category_selector_btn"
                    android:elevation="6dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_cat_rest"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.5dp"
                        android:text="맛집"
                        android:textColor="@color/black"
                        android:textSize="14.5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/catCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="7.5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/category_selector_btn"
                    android:elevation="6dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_cat_cafe"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.5dp"
                        android:text="카페"
                        android:textColor="@color/black"
                        android:textSize="14.5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/catCulture"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="7.5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/category_selector_btn"
                    android:elevation="6dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_cat_culture"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.5dp"
                        android:text="문화공간"
                        android:textColor="@color/black"
                        android:textSize="14.5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/catShop"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="24dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/category_selector_btn"
                    android:elevation="6dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_cat_shop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5.5dp"
                        android:text="샵"
                        android:textColor="@color/black"
                        android:textSize="14.5dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                tools:listitem="@layout/item_topic"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</layout>