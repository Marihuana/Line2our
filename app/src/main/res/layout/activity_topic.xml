<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="topic"
            type="com.four.hackerton.line2our.model.network.model.TopicVO" />

        <variable
            name="station"
            type="com.four.hackerton.line2our.model.network.model.StationVO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        tools:context=".feature.topic.TopicActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loTopSheet"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/img_rounded_top_sheet"
            android:elevation="6dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvTopic"
                android:gravity="left|center_vertical"
                >
                <ImageView
                    android:id="@+id/ivPin"
                    android:layout_width="12.4dp"
                    android:layout_height="15.2dp"
                    android:src="@drawable/ic_topic_pin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/tvStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@{station.name}"
                    android:textColor="@color/high_light"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/ivPin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@{topic.title}"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/topicImage"
                android:layout_width="116dp"
                android:layout_height="93dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/img_topic_restaurant"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/loTopSheet"
            app:layout_constraintBottom_toTopOf="@id/btnRecommend"
            tools:listitem="@layout/item_place"
            />

        <LinearLayout
            android:id="@+id/btnRecommend"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="6dp"
            android:background="@drawable/img_rounded_button_place"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 아는 장소 추천하기"
                android:textColor="#fe7777"
                android:textSize="16dp"/>

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_fire"
                android:layout_marginStart="4dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>